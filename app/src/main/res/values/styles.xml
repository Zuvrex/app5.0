<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/third</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TestButtonNo" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/third</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="testButtonYes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/first</item>
    </style>

    <style name="TestQuestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/second</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TestAnswer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/second</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="form_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:textColor">@color/second</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="form_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>